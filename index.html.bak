    <style>
      /* Simple drawer styles using :target so no JavaScript is needed */
      aside.drawer {
        position: fixed;
        top: 0;
        right: 0;
        height: 100vh;
        width: 320px;
        max-width: 100%;
        background: white;
        border-left: 1px solid rgba(0,0,0,0.08);
        box-shadow: -8px 0 24px rgba(0,0,0,0.06);
        transform: translateX(100%);
        transition: transform .28s ease;
        z-index: 60;
        overflow: auto;
      }
      aside.drawer:target {
        transform: translateX(0);
      }
      /* VS Code-like code area (editable textarea) */
      .code-area{
        width:100%;
        min-height:50vh;
        background:#1e1e1e;
        color:#d4d4d4;
        font-family: Consolas, 'Courier New', monospace;
        font-size:13px;
        line-height:1.45;
        padding:12px;
        border-radius:6px;
        border:1px solid rgba(255,255,255,0.03);
        resize:vertical;
        box-sizing:border-box;
        white-space:pre;
        overflow:auto;
      }
      .code-area::selection{ background:#004b7c; }
      .code-label{ font-size:12px; color:#6b7280; margin-bottom:6px; display:block; }
      /* add a little space so main content isn't hidden behind the drawer on large screens */
      @media (min-width:1024px){
        main { padding-right: 0; }
      }
    </style>
